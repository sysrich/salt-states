git:
  user.present:
    - fullname: git User
    - shell: /usr/bin/git-shell
    - home: /srv/git
    - createhome: False
    - require:
      - pkg: myopensuse.packages

/srv/git:
  file.directory:
    - user: git
    - group: users
    - require:
      - user: git

/srv/git-priv:
  file.directory:
    - user: git
    - group: users
    - require:
      - user: git

/srv/git/git-shell-commands:
  file.directory:
    - user: git
    - group: users
    - dir_mode: 700
    - file_mode: 700
    - require:
      - user: git

/srv/git/git-shell-commands/no-interactive-login:
  file.managed:
    - user: git
    - source: salt://rootco/git/no-interactive-login
    - mode: 700
    - require:
      - file: /srv/git/git-shell-commands

/srv/git-priv/todo.git:
  git.present:
    - user: git
    - require:
      - file: /srv/git-priv

/srv/git-priv/todo:
  git.present:
    - user: git
    - bare: true
    - require:
      - file: /srv/git-priv

git-ssh-keys:
  ssh_auth.present:
    - user: git
    - names:
      - 
    - enc: ssh-rsa
    - comment: ilmehtar@rootco.de

/etc/systemd/system/rootco-srv-git-backup.service:
  file.managed:
    - user: root
    - group: root
    - mode: 644
    - source: salt://rootco/git/rootco-srv-git-backup.service
    - template: jinja

/etc/systemd/system/rootco-srv-git-backup.timer:
  file.managed:
    - user: root
    - group: root
    - mode: 644
    - source: salt://rootco/git/rootco-srv-git-backup.timer
    - require:
      - file: /etc/systemd/system/rootco-srv-git-backup.service

rootco-srv-git-backup.timer:
  service.running:
    - enable: True
    - require:
      - file: /etc/systemd/system/rootco-srv-git-backup.timer
