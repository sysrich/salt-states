[Unit]
Description=Rootco sslh service
After=network-online.target

[Service]
ExecStartPre=-/usr/bin/podman pull registry.opensuse.org/home/rbrownsuse/containers/containers/sslh:latest
# TODO: PORT 81 for TESTING ONLY
ExecStart=/usr/bin/podman run --rm -p 81:80 -v /var/opt/sslh/sslh.cfg:/etc/sslh.cfg:ro registry.opensuse.org/home/rbrownsuse/containers/containers/sslh:latest
Restart=on-failure

[Install]
WantedBy=multi-user.target
