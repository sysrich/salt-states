[Unit]
Description=rootco.de Certbot service
After=network-online.target

[Service]
Type=oneshot

ExecStartPre=-/usr/bin/podman pull registry.opensuse.org/home/rbrownsuse/containers/containers/certbot:latest
ExecStartPre=-/usr/bin/podman run --rm -v /var/opt/rootco-web/etc:/etc/nginx -v /var/opt/rootco-web/certbot:/etc/certbot -it registry.opensuse.org/home/rbrownsuse/containers/containers/certbot:latest --nginx
ExecStart=/usr/bin/podman run --rm -v /var/opt/rootco-web/etc:/etc/nginx -v /var/opt/rootco-web/certbot:/etc/certbot -it registry.opensuse.org/home/rbrownsuse/containers/containers/certbot:latest renew


[Install]
WantedBy=multi-user.target
