[org/gnome/shell/calendar]
show-weekdate=true

[org/gnome/gedit/preferences/editor]
highlight-current-line=true
display-right-margin=true
bracket-matching=true
auto-save=true
scheme='cobalt'
tabs-size=uint32 2
display-line-numbers=true
wrap-mode='none'
insert-spaces=true
wrap-last-split-mode='word'
auto-indent=true

[org/gnome/gedit/plugins/drawspaces]
draw-spaces=['space', 'tab', 'newline', 'nbsp', 'leading', 'trailing']

[org/gnome/gedit/plugins]
active-plugins=['drawspaces', 'codecomment', 'wordcompletion', 'time', 'spell', 'sort', 'modelines', 'filebrowser', 'docinfo']

[org/gnome/nautilus/preferences]
default-folder-viewer='list-view'

[org/gnome/desktop/interface]
clock-show-date=true

[org/gnome/desktop/input-sources]
{% if grains['nodename'] == 'bb8.dyn.rootco.de' -%}
sources=[('xkb', 'us'), ('xkb', 'de')]
xkb-options=['terminate:ctrl_alt_bksp']
{% else -%}
sources=[('xkb', 'gb'), ('xkb', 'de')]
xkb-options=['terminate:ctrl_alt_bksp']
{% endif %}

[org/gnome/shell]
favorite-apps=['firefox.desktop', 'evolution.desktop', 'org.gnome.gedit.desktop', 'org.gnome.Boxes.desktop', 'terminator.desktop', 'empathy.desktop', 'hexchat.desktop', 'org.gnome.Nautilus.desktop', 'impress.desktop']

{% if grains['nodename'] == 'bb8.dyn.rootco.de' -%}
[org/gnome/desktop/interface]
text-scaling-factor=1.5
{% endif %}
